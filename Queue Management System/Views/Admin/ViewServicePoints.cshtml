@model IEnumerable<Queue_Management_System.Models.ServicePointVM>

@{
    ViewData["Title"] = "Service Points";
}

<h1>Service Points</h1>

<p>
    <a class="btn btn-success" asp-action="CreateServicePoint"><i class="fas fa-plus"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceProviderId)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceProviderId)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="EditServicePoint" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a>
                <a class="btn btn-info" asp-action="ViewServicePointDetails" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"> <i class="far fa-trash-alt"></i></button>
            </td>
        </tr>
}
    </tbody>
</table>

<form id="deleteFrom" asp-action="DeleteServicePoint">
    <input type="hidden" id="servicePointId" name="Id"/>
</form>

@section Scripts{
    <script>
        $(function(){
            $('.deleteBtn').click(function(e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                        if(confirm){
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#servicePointId').val(id);
                            $('#deleteFrom').submit();
                            }
                        });
                });           
        });
    </script>
}